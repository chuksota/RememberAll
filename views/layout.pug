html
  head
      block head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
        title="taskd"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css' rel= 'stylesheet' integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6")
  body
    nav(class='navbar navbar-expand-lg navbar-dark bg-primary')
      a(class='navbar-brand' href='/') taskd
      if locals.authenticated
        span(class='navbar-text px-4') Welcome  #{user.userName}
        form(class='form-inline pr-4' action='/logout' method="POST")
          button(class='btn btn-sm btn-warning' type='submit') Log Out
      else
        span(class='navbar-text px-4')
          a(class='btn btn-sm btn-dark mr-2' href='login') Log in 
